{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es6",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "example",
    "examples",
    "__tests__",
    "__mocks__",
    "__dep"
  ],
  "include": ["src"] 
}
